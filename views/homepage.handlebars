<main class="post-handlebar-main">
    <h1>Posts</h1>
    <div class="list-group list-group-item-action">
        {{#each posts as |posts|}}
        <div class="list-group-item list-group-item-action active" aria-current="true">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1 table-header">{{posts.title}}</h5>
            </div>
            
            <p class="mb-1">{{posts.body}}</p>
            <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>

            <div class="btn-group" role="group" aria-label="Basic example">
            {{!-- <button type="button" class="btn btn-primary">Edit</button> --}}
        </div>
        </div>
        {{!-- <div class="col-8 text-center bg-white">
        <button type="button" class="btn btn-primary button">Book Class</button>
        </div> --}}
         <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
        &nbsp;
        {{/each}}
    </div>
</main>

